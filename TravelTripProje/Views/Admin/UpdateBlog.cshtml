@model TravelTripProje.Models.Sınıflar.Blog
@{
    ViewBag.Title = "UpdateBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="container"> Blog Güncelleme Sayfası</h3>

<form class="form-group" method="post">
    @Html.HiddenFor(x => x.ID)
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    <label>Tarih</label>
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    <label>Resim URL</label>
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Aciklama, 12, 1, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>

</form>
