                            {
                                <ul>
                                    <li><a href="/Blog/BlogDetay/@y.ID">@y.Baslik</a></li>
                                </ul>
                            
                            }
                        </div>*@


                    </div>


                </div>
            <div class="clearfix"></div>
        </div>
    </div>
</body>
</html>







