@using TravelTripProje.Models.Sınıflar
@model List<Blog>

<div class="con-bot">

    @foreach (var item in Model)
    {
        <div class="right">
            <div class="bot-left">
                <img style="width:300px;height:150px" src="@item.BlogImage" alt="" />
            </div>
            <div class="left-text">
                <h4>@item.Baslik</h4>
                <span class="doller">@item.Tarih.ToShortDateString()</span>
                @*<p>@item.Aciklama.Substring(0, item.Aciklama.Substring(0, 0).LastIndexOf(" "))</p>*@
                <p><a href="/Blogs/Details/@item.ID"><span class="read">Devamını Oku >></span></a></p>
            </div>
        </div>

    }
</div>


